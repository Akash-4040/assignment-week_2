#include <iostream>
#include <fstream>
using namespace std;

class Item {
public:
    string name;
    int quantity;

    void saveToFile() {
        ofstream out("items.txt");  // open file to write
        if (out.is_open()) {
            out << name << "," << quantity << endl;  // write name and quantity
            out.close();
            cout << "Item saved to file." << endl;
        } else {
            cout << "Cannot open file to write." << endl;
        }
    }

    void loadFromFile() {
        ifstream in("items.txt");  // open file to read
        if (in.is_open()) {
            string line;
            while (getline(in, line)) {  // read each line
                cout << "File content: " << line << endl;
            }
            in.close();
        } else {
            cout << "Cannot open file to read." << endl;
        }
    }
};

int main() {
    Item tool;

    // assign values
    tool.name = "Screwdriver";
    tool.quantity = 10;

    // save to file
    tool.saveToFile();

    // read and display file content
    tool.loadFromFile();

    return 0;
}
